@font-face
  font-family 'Proxima Nova'
  font-weight normal
  src url('./fonts/proxima-nova/reg.otf') format('opentype')

@font-face
  font-family 'Proxima Nova'
  font-weight bold
  src url('./fonts/proxima-nova/bold.otf') format('opentype')

@font-face
  font-family 'Proxima Nova'
  font-weight lighter
  src url('./fonts/proxima-nova/light.otf') format('opentype')

body
  background-color black
  font-family 'Proxima Nova'

#greeting-wrapper
  position absolute
  width 100%
  height 100%
  background-color white

#greeting
  background-color white
  font-weight bold
  font-size 50px
  width 320px
  position absolute
  top 50%
  left 50%
  margin-top -25px
  margin-left -160px
